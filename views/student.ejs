<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Timetable</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css">
</head>
<body data-page="student-page" data-has-course="<%= (student.course && student.course.length > 0)  ? 'true' : 'false' %>">
    <a href="/logout" class="btn btn-secondary btn-lg">Logout</a>

    <div class="students-timetable">
        <h2 class="student-heading">Your Timetable</h2>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr class="table-primary">
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Course</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-id="<%= student._id %>">
                        <td><%= student.name %></td>
                        <td><%= student.email %></td>
                        <td>
                        <% if (student.course && student.course.length > 0) { %>
                            <% student.course.forEach(course => { %>
                            <span><%= course.name %></span><br>
                            <% }) %>
                        <% } else { %>
                            <span>No course</span>
                        <% } %>
                        </td>  
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- course modal  -->
    <div class="modal fade" id="addCourseModal" tabindex="-1" role="dialog" aria-labelledby="addCourseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <form id="addCourseForm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add your first course</h5>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="courseName" class="modal-name">Course Name</label>
                            <input type="text" class="form-control" id="courseName" name="courseName" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-secondary btn-modal">Add course</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="/script.js"></script>
</body>
</html>